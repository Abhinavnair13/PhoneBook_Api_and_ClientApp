@model PhoneBook
<h1>Delete Contact</h1>
<div>
    <h4> Are you sure you want to delete this Contact?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2"> FirstName:</dt>
        <dt class="col-sm-10">@Model.FirstName</dt>

        <dt class="col-sm-2"> LastName:</dt>
        <dt class="col-sm-10">@Model.LastName</dt>

        <dt class="col-sm-2"> Company:</dt>
        <dt class="col-sm-10">@Model.CompanyName</dt>

        <dt class="col-sm-2"> Contact Number:</dt>
        <dt class="col-sm-10">@Model.ContactNumber</dt>

        <dt class="col-sm-2"> Email:</dt>
        <dt class="col-sm-10">@Model.Email</dt>
    </dl>

    <form asp-action="DeleteConfirm" method="post">
        <input type="hidden" asp-for="@Model.PhoneId" />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="delete" />
            <a asp-action="Index" class="btn btn-primary"> Back to List </a>

        </div>
    </form>
</div>